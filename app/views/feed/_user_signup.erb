<div class="comment">
  <div class="avatar">
    <%= user_image_tag user, avatar_main_size %>
  </div>
  <div class="content">
    <div class="info">
      <%= mfword("Dołączył", "Dołączyła", user) %> do nas <%= link_to_user user.name, user %>.
    </div>
    <div class="footer">
      <span class="timeago" title="<%= user.created_at.iso8601 %>"><%= date_format user.created_at %></span>
    </div>
  </div>
</div>

