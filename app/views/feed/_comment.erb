<div class="comment">

  <div class="avatar">
    <%= user_image_tag comment.owner, avatar_main_size %>
  </div>

  <div class="content">
    <div class="info">
      <%= link_to_user comment.owner.name, comment.owner %>
      <% if grouping.grouped_count > 0 %>
        oraz jeszcze <%= grouping.grouped_count %> <%= cntword(grouping.grouped_count, 'osoba' , 'osoby', 'osób') %>
        <%= cntword(grouping.grouped_count, 'skomentowała' , 'skomentowały', 'skomentowało') %>
      <% else %>
        <%= mfword("skomentował", "skomentowała", comment.owner) %> publikację
      <% end %>
      <%= link_to url_add_hostname(url_for(comment.commentable)), (url_for(comment.commentable) + "#" + comment.anchor) %>:
      <span class="cite">"<%= truncate comment.content, :length => 75 %>"</span>
    </div>
    <div class="footer">
      <span class="timeago" title="<%= comment.created_at %>"><%= comment.created_at %></span>.
    </div>
  </div>

</div>
