<% if @audits.count > 0 %>
  <%= will_paginate @audits, :param_name => :audits_page %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>UÅ¼ytkownik</th>
      <th>Data</th>
      <th>IP</th>
      <th>Zdarzenie</th>
    </tr>
    </thead>
    <tbody>
    <% @audits.each do |audit| %>
      <tr>
        <td><%= link_to audit.user.name, admin_user_path(audit.user) %></td>
